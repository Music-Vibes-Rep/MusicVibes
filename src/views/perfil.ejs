<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mi Dashboard - MusicVibe</title>
  <script>
    function cambiarTab(tabId) {
      document.querySelectorAll('.tab-content').forEach(t => t.classList.add('hidden'));
      document.getElementById(tabId).classList.remove('hidden');

      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('bg-white', 'text-pink-600', 'border-t', 'border-l', 'border-r', 'rounded-t-md'));
      document.getElementById('btn-' + tabId).classList.add('bg-white', 'text-pink-600', 'border-t', 'border-l', 'border-r', 'rounded-t-md');
    }
  </script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50 min-h-screen pt-20">
  <%- include('partials/_navbar') %>

  <div class="max-w-7xl mx-auto px-4">
    <!-- Tabs estilo navegador -->
    <div class="flex space-x-4 border-b border-gray-300 mb-6">
      <button id="btn-tab-perfil" class="tab-btn px-5 py-2 text-sm font-semibold text-gray-700 hover:text-pink-600" onclick="cambiarTab('tab-perfil')">Perfil</button>
      <button id="btn-tab-publicaciones" class="tab-btn px-5 py-2 text-sm font-semibold text-gray-700 hover:text-pink-600" onclick="cambiarTab('tab-publicaciones')">Publicaciones</button>
      <form action="/logout" method="POST" class="block">
        <button type="submit" class="ml-auto px-4 py-2 text-sm text-red-500 hover:underline">Cerrar sesión</button>
      </form>
    </div>

    <!-- Contenido: PERFIL -->
    <div id="tab-perfil" class="tab-content bg-white p-8 rounded-xl shadow-sm">
      <div class="flex flex-col md:flex-row gap-10 items-center md:items-start">
        <img src="<%= usuario.foto_perfil || 'assets/img/default-profile.png' %>" alt="Foto de perfil" class="w-40 h-40 rounded-full border-4 border-pink-400 object-cover">
        <div class="text-center md:text-left">
          <h2 class="text-3xl font-extrabold text-gray-800"><%= usuario.nombre %> <%= usuario.apellido %></h2>
          <p class="mt-2 text-gray-600 text-lg"><%= usuario.descripcion || 'Aún no has escrito una descripción' %></p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-6 mt-10">
        <div class="bg-pink-50 p-6 rounded-lg shadow">
          <h3 class="font-semibold text-pink-600 text-lg">Destacados</h3>
          <p class="text-gray-700 mt-2">Aquí podrías poner una publicación destacada, foto o enlace.</p>
        </div>
        <div class="bg-pink-50 p-6 rounded-lg shadow">
          <h3 class="font-semibold text-pink-600 text-lg">Intereses</h3>
          <p class="text-gray-700 mt-2">Guitarra, rock, metal, lo que quieras compartir.</p>
        </div>
      </div>

      <!-- Últimas publicaciones -->
      <% if (publicacion && publicacion.length > 0) { %>
        <div class="mt-12">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Últimas publicaciones</h3>
          <div class="grid md:grid-cols-2 gap-6">
            <% publicacion.slice(0, 2).forEach(publi => { %>
              <div class="bg-white border rounded-lg shadow-sm p-4">
                <% if (publi.foto) { %>
                  <img src="<%= publi.foto %>" class="w-full h-40 object-cover rounded mb-2" alt="">
                <% } %>
                <h4 class="text-lg font-semibold text-gray-700 mb-1"><%= publi.titulo %></h4>
                <p class="text-sm text-gray-600"><%= publi.contenido %></p>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Contenido: PUBLICACIONES -->
    <div id="tab-publicaciones" class="tab-content hidden bg-white p-8 rounded-xl shadow-sm">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Mis publicaciones</h2>
        <a href="/publicacion" class="bg-pink-500 text-white px-4 py-2 rounded hover:bg-pink-600">Publicar</a>
      </div>

      <% if (publicacion && publicacion.length > 0) { %>
        <% publicacion.forEach(publi => { %>
          <div class="flex items-start gap-4 border rounded-lg p-4 mb-4 bg-gray-50">
            <% if (publi.foto) { %>
              <img src="<%= publi.foto %>" alt="Imagen" class="w-16 h-16 object-cover rounded">
            <% } %>
            <div class="flex-1">
              <h3 class="font-semibold text-gray-800"><%= publi.titulo %></h3>
              <p class="text-gray-600"><%= publi.contenido %></p>
            </div>
            <form action="/publicaciones/<%= publi.id %>/delete" method="POST">
              <button class="text-red-400 hover:text-red-600 text-xl">&times;</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">Aún no tienes publicaciones.</p>
      <% } %>
    </div>
  </div>

  <script>cambiarTab('tab-perfil');</script>
</body>
</html>