<!DOCTYPE html>
<html lang="es">


<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mi Dashboard - MusicVibe</title>
  <script>
    function cambiarTab(tabId) {
      document.querySelectorAll('.tab-content').forEach(t => t.classList.add('hidden'));
      document.getElementById(tabId).classList.remove('hidden');


      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('bg-white', 'text-pink-600', 'border-t', 'border-l', 'border-r', 'rounded-t-md'));
      document.getElementById('btn-' + tabId).classList.add('bg-white', 'text-pink-600', 'border-t', 'border-l', 'border-r', 'rounded-t-md');
    }
  </script>
  <style>
    body {
      background: linear-gradient(135deg, #fda4af, #ffffff, #fbcfe8);
    }
  </style>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>


<body class="bg-gray-50 min-h-screen pt-20">
  <%- include('partials/_navbar') %>

    <div class="max-w-7xl mx-auto px-4">
      <div
        class="flex flex-col md:flex-row md:justify-between md:items-center border-b border-gray-300 mb-6 space-y-3 md:space-y-0">
        <div class="flex overflow-x-auto md:overflow-visible space-x-4 pb-2 md:pb-0">
          <button id="btn-tab-perfil"
            class="tab-btn flex-shrink-0 px-4 py-2 text-sm font-semibold text-gray-700 hover:text-pink-600 whitespace-nowrap"
            onclick="cambiarTab('tab-perfil')">Perfil</button>
          <button id="btn-tab-publicaciones"
            class="tab-btn flex-shrink-0 px-4 py-2 text-sm font-semibold text-gray-700 hover:text-pink-600 whitespace-nowrap"
            onclick="cambiarTab('tab-publicaciones')">Publicaciones</button>
          <button id="btn-tab-editar"
            class="tab-btn flex-shrink-0 px-4 py-2 text-sm font-semibold text-gray-700 hover:text-pink-600 whitespace-nowrap"
            onclick="cambiarTab('tab-editar')">Editar perfil</button>
        </div>

        <div
          class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0 md:space-x-6 mt-4">
          <form action="/logout" method="POST">
            <button type="submit"
              class="text-sm bg-gray-100 text-gray-800 hover:bg-gray-200 px-4 py-1 rounded transition">
              Cerrar sesión
            </button>
          </form>
        </div>


      </div>

      <div id="tab-perfil" class="tab-content bg-white p-8 rounded-xl shadow-md">
        <div class="flex flex-col items-center space-y-4">
          <div class="w-40 h-40 relative">
              <img src="<%= usuario.foto_perfil ? usuario.foto_perfil : '/assets/img/default-profile.png' %>"
                alt="Foto de perfil"
                class="w-full h-full object-cover rounded-full border-4 border-pink-400 shadow-md">

              <% if (usuario.es_musico == 1) { %>
                <img src="/assets/img/musico-verificado.png"
                  alt="Músico verificado"
                  class="absolute bottom-0 right-0 w-8 h-8 rounded-full shadow-md">
              <% } %>
          </div>


          <div class="text-center">
            <h2 class="text-3xl font-bold text-pink-600 mb-1">
              <%= usuario.nombre %>
                <%= usuario.apellido %>
            </h2>
            <p class="text-gray-600 italic">
              <%= usuario.descripcion || 'Aún no has escrito una descripción.' %>
            </p>
          </div>


          <div class="bg-pink-50 px-6 py-4 rounded-lg shadow-inner">
            <p class="font-semibold text-pink-600">Instrumentos</p>
            <% if (usuario.instrumentos?.length) { %>
              <p><%= usuario.instrumentos.map(i => i.Nombre).join(', ') %></p>
            <% } else { %>
              <p>No especificado</p>
            <% } %>
          </div>

          <div class="bg-pink-50 px-6 py-4 rounded-lg shadow-inner">
            <p class="font-semibold text-pink-600">Géneros favoritos</p>
            <% if (usuario.generos?.length) { %>
              <p><%= usuario.generos.map(g => g.Nombre).join(', ') %></p>
            <% } else { %>
              <p>No especificado</p>
            <% } %>
          </div>

        </div>


        <% if (publicacion && publicacion.length> 0) { %>
          <div class="mt-12">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Últimas publicaciones</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              <% publicacion.forEach(pub => { %>
                <article class="bg-white text-gray-900 rounded-xl shadow overflow-hidden flex flex-col">
                  <% if (pub.foto) { %>
                    <div class="w-full aspect-square bg-gray-100 overflow-hidden">
                      <img src="<%= pub.foto %>" alt="Imagen de publicación"
                          class="w-full h-full object-cover">
                    </div>
                    <% } else { %>
                    <div class="bg-gray-300 w-full h-60 flex items-center justify-center text-gray-500">
                      Sin imagen
                    </div>
                  <% } %>
                  <div class="p-4 flex flex-col justify-between flex-1">
                    <p class="text-xs text-gray-500 mb-2">
                      <%= new Date(pub.fecha_publicacion).toLocaleDateString('es-ES') %>
                    </p>
                    <div class="text-sm whitespace-pre-line text-gray-800">
                      <%- pub.contenido %>
                    </div>
                  </div>
                </article>
              <% }) %>
            </div>
          </div>
          <% } %>
      </div>

      <div id="tab-publicaciones" class="tab-content hidden bg-white p-8 rounded-xl shadow-sm">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-800">Mis publicaciones</h2>
          <a href="/publicacion" class="bg-pink-500 text-white px-4 py-2 rounded hover:bg-pink-600">Publicar</a>
        </div>


        <% if (publicacion && publicacion.length> 0) { %>
          <% publicacion.forEach(publi=> { %>
            <div class="flex items-start gap-4 border rounded-lg p-4 mb-4 bg-gray-50">
              <% if (publi.foto) { %>
                <img src="<%= publi.foto %>" alt="Imagen" class="w-16 h-16 object-cover rounded">
                <% } %>
                  <div class="flex-1">
                    <h3 class="font-semibold text-gray-800">
                      <%= publi.titulo %>
                    </h3>
                    <p class="text-gray-600">
                      <%= publi.contenido %>
                    </p>
                  </div>
                  <form action="/publicaciones/<%= publi.id_publicacion %>/eliminar" method="POST">
                    <button type="submit" class="text-red-400 hover:text-red-600 text-xl">&times;</button>
                  </form>
            </div>
            <% }) %>
              <% } else { %>
                <p class="text-gray-500">Aún no tienes publicaciones.</p>
                <% } %>
      </div>


      <div id="tab-editar" class="tab-content hidden bg-white p-8 rounded-xl shadow-sm">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Editar perfil</h2>

        <form method="POST" action="/perfil/editar" enctype="multipart/form-data" class="space-y-6">

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label class="block font-medium text-gray-700">Nombre</label>
              <input type="text" name="nombre" value="<%= usuario.nombre %>"
                class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-400" required>
            </div>
            <div>
              <label class="block font-medium text-gray-700">Apellido</label>
              <input type="text" name="apellido" value="<%= usuario.apellido %>"
                class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-400" required>
            </div>
          </div>

          <div>
            <label class="block font-medium text-gray-700">Descripción</label>
            <textarea name="descripcion" rows="3"
              class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-400"><%= usuario.descripcion || '' %></textarea>
          </div>

          <div>
            <label class="block font-medium text-gray-700">¿Eres músico?</label>
            <select name="es_musico"
              class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
              <option value="1" <%=usuario.es_musico==1 ? 'selected' : '' %>>Sí</option>
              <option value="0" <%=usuario.es_musico==0 ? 'selected' : '' %>>No</option>
            </select>
          </div>

          <div class="grid md:grid-cols-2 gap-4">
            <div id="contenedor-instrumentos" class="<%= parseInt(usuario.es_musico) === 1 ? '' : 'hidden' %>">
              <label class="block font-medium text-gray-700 mb-1">Instrumentos</label>
              <div class="space-y-2">
                <% if (usuario.instrumentos && usuario.instrumentos.length > 0) { %>
                  <% usuario.instrumentos.forEach(inst => { %>
                    <select name="instrumentos[]" class="w-full border rounded-md px-4 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
                      <option value="">No seleccionado</option>
                      <% instrumentos.forEach(opcion => { %>
                        <option value="<%= opcion.id_instrumento %>" <%= opcion.id_instrumento === inst.id_instrumento ? 'selected' : '' %>><%= opcion.Nombre %></option>
                      <% }) %>
                    </select>
                  <% }) %>
                <% } else { %>
                  <select name="instrumentos[]" class="w-full border rounded-md px-4 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
                    <option value="">No seleccionado</option>
                    <% instrumentos.forEach(opcion => { %>
                      <option value="<%= opcion.id_instrumento %>"><%= opcion.Nombre %></option>
                    <% }) %>
                  </select>
                <% } %>
              </div>
              <button type="button" onclick="agregarInstrumento()" class="text-sm text-pink-600 hover:underline mt-1">+ Añadir otro instrumento</button>
            </div>
            <div id="contenedor-generos">
              <label class="block font-medium text-gray-700 mb-1">Géneros favoritos</label>
              <div class="space-y-2">
                <% if (usuario.generos && usuario.generos.length > 0) { %>
                  <% usuario.generos.forEach(gen => { %>
                    <select name="generos[]" class="w-full border rounded-md px-4 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
                      <option value="">No seleccionado</option>
                      <% generos.forEach(opcion => { %>
                        <option value="<%= opcion.id_genero %>" <%= opcion.id_genero === gen.id_genero ? 'selected' : '' %>><%= opcion.Nombre %></option>
                      <% }) %>
                    </select>
                  <% }) %>
                <% } else { %>
                  <select name="generos[]" class="w-full border rounded-md px-4 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
                    <option value="">No seleccionado</option>
                    <% generos.forEach(opcion => { %>
                      <option value="<%= opcion.id_genero %>"><%= opcion.Nombre %></option>
                    <% }) %>
                  </select>
                <% } %>
              </div>
              <button type="button" onclick="agregarGenero()" class="text-sm text-pink-600 hover:underline mt-1">+ Añadir otro género</button>
            </div>
            <div>
              <label class="block font-medium text-gray-700">Provincia</label>
              <select name="id_provincia"
                class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-pink-400">
                <% provincias.forEach(p=> { %>
                  <option value="<%= p.id_provincia %>" <%=usuario.id_provincia==p.id_provincia ? 'selected' : '' %>><%= p.Provincia %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <div>
            <label class="block font-medium text-gray-700">Foto de perfil</label>
            <input type="file" name="foto_perfil" accept="image/*" class="block mt-1">
          </div>

          <div class="flex justify-center items-center pt-4">
            <button type="submit"
              class="bg-pink-600 text-white px-6 py-2 rounded-md hover:bg-pink-700 transition">
              Guardar cambios
            </button>
          </div>
        </form>

        <div class="pt-4 flex justify-center items-center">
          <form action="/usuario/eliminar" method="POST"
            onsubmit="return confirm('¿Estás seguro de que deseas eliminar tu perfil? Esta acción no se puede deshacer.')">
            <button type="submit"
              class="bg-red-600 text-white px-6 py-2 rounded-md hover:bg-red-700 transition">
              Eliminar perfil
            </button>
          </form>
        </div>
      </div>

    </div>

    <script>
      cambiarTab('tab-perfil');

      function agregarInstrumento() {
        const contenedor = document.querySelector('#contenedor-instrumentos .space-y-2');
        const select = contenedor.querySelector('select').cloneNode(true);
        contenedor.appendChild(select);
      }

      function agregarGenero() {
        const contenedor = document.querySelector('#contenedor-generos .space-y-2');
        const select = contenedor.querySelector('select').cloneNode(true);
        contenedor.appendChild(select);
      }

      document.addEventListener('DOMContentLoaded', function () {
        const selectMusico = document.querySelector('select[name="es_musico"]');
        const instrumentosBlock = document.getElementById('contenedor-instrumentos');

        if (selectMusico && instrumentosBlock) {
          selectMusico.addEventListener('change', () => {
            if (parseInt(selectMusico.value) === 1) {
              instrumentosBlock.classList.remove('hidden');
            } else {
              instrumentosBlock.classList.add('hidden');
            }
          });
        }
      });

    </script>
</body>


</html>
