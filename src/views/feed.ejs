<!DOCTYPE html>
<html lang="es">


<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Feed - MusicVibe</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .main-wrapper {
      margin-top: 80px;
    }


    input[type="search"]::-webkit-search-cancel-button {
      -webkit-appearance: none;
    }
  </style>
</head>


<body class="text-white bg-gradient-to-r from-red-600 to-pink-700 min-h-screen">
  <%- include('partials/_navbar') %>


    <main class="main-wrapper container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-6">


      <!-- Centro (barra + publicaciones) -->
      <section class="md:col-span-2 space-y-6">


        <!-- Barra de b√∫squeda + bot√≥n -->
        <div
          class="bg-white text-gray-800 rounded-xl shadow px-4 py-3 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <div class="flex-1">
            <input type="search" placeholder="Busca..."
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-500 focus:border-red-500" />
          </div>
          <div class="flex-shrink-0">
            <a href="/publicacion"
              class="inline-block mt-2 sm:mt-0 bg-red-600 hover:bg-red-500 text-white text-sm font-semibold px-4 py-2 rounded-md shadow">
              Expresa tu vibra
            </a>
          </div>
        </div>


        <% publicaciones.forEach(pub=> { %>
          <article class="relative bg-white text-gray-900 rounded-xl shadow-md p-4 border-l-4 border-pink-400">


            <% if (usuario && parseInt(usuario.id)===parseInt(pub.id_usuario)) { %>
              <div class="absolute top-3 right-4 flex space-x-2 z-10">
                <a href="/publicaciones/<%= pub.id_publicacion %>/editar"
                  class="flex items-center gap-1 text-xs font-medium bg-blue-100 text-blue-700 px-3 py-1 rounded-full hover:bg-blue-200 transition">
                  ‚úèÔ∏è Editar
                </a>
                <form action="/publicaciones/<%= pub.id_publicacion %>/eliminar" method="POST"
                  onsubmit="return confirm('¬øSeguro que deseas eliminar esta publicaci√≥n?');">
                  <button type="submit"
                    class="flex items-center gap-1 text-xs font-medium bg-red-100 text-red-700 px-3 py-1 rounded-full hover:bg-red-200 transition">
                    üóëÔ∏è Eliminar
                  </button>
                </form>
              </div>


              <% } %>




                <div class="flex items-center space-x-3 mb-3">
                  <img src="<%= pub.foto_perfil || 'assets/img/default-profile.png' %>" alt="Avatar"
                    class="w-12 h-12 rounded-full object-cover border border-pink-300">
                  <div>
                    <h3 class="text-red-700 font-semibold text-sm">
                      <%= pub.nombre_usuario %>
                    </h3>
                    <p class="text-xs text-gray-500">
                      <%= new Date(pub.fecha_publicacion).toLocaleDateString() %>
                    </p>
                  </div>
                </div>


                <% if (pub.foto) { %>
                  <img src="<%= pub.foto %>" alt="Imagen de publicaci√≥n"
                    class="w-full rounded-md mb-3 object-contain max-h-[600px] border border-gray-200" />
                  <% } %>


                    <p class="text-gray-800 text-sm whitespace-pre-line">
                      <%= pub.contenido %>
                    </p>


                    <!-- Interacciones -->
                    <div class="mt-4 bg-gray-100 p-4 rounded-lg shadow-inner space-y-4">


                      <!-- Likes -->
                      <form action="/like" method="POST" class="flex items-center justify-start gap-2">
                        <input type="hidden" name="id_publicacion" value="<%= pub.id_publicacion %>">


                        <button type="<%= usuario ? 'submit' : 'button' %>"
                          class="flex items-center gap-2 group disabled:opacity-50 disabled:cursor-not-allowed"
                          <%=usuario ? '' : 'disabled' %>
                          >
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 transition duration-200 transform group-hover:scale-110
                  <%= pub.usuarioDioLike ? 'text-pink-600' : 'text-gray-400' %>"
                            fill="<%= pub.usuarioDioLike ? 'currentColor' : 'none' %>" viewBox="0 0 24 24"
                            stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 21C12 21 4.5 14.5 4.5 9.5C4.5 6.5 7 4 9.5 4C11 4 12 5 12 5C12 5 13 4 14.5 4C17 4 19.5 6.5 19.5 9.5C19.5 14.5 12 21 12 21Z" />
                          </svg>
                          <span class="text-sm font-semibold text-pink-800">Vibras (<%= pub.totalLikes %>)</span>
                        </button>
                      </form>






                      <!-- Comentarios -->
                      <button type="button" onclick="toggleComentarios(<%= pub.id_publicacion %>)"
                        class="text-sm text-pink-700 font-semibold hover:underline flex items-center gap-1">
                        Comentarios (<%= pub.comentarios.length %>)
                          <span id="flecha-<%= pub.id_publicacion %>">‚ñº</span>
                      </button>


                      <% pub.comentarios.forEach(com=> { %>
                        <div class="bg-white p-3 rounded-md shadow border border-gray-200">
                          <div class="flex justify-between items-start">
                            <div>
                              <strong class="text-red-600">
                                <%= com.nombre_usuario %>
                              </strong>
                              <p class="text-sm text-gray-800 mt-1">
                                <%= com.Comentario %>
                              </p>
                            </div>
                            <div class="text-right">
                              <span class="text-xs text-gray-500 block">
                                <%= new Date(com.fecha_comentario).toLocaleDateString('es-ES') %>
                              </span>
                              <% if (usuario && usuario.id===com.id_usuario) { %>
                                <form action="/comentario/eliminar" method="POST"
                                  onsubmit="return confirm('¬øEliminar este comentario?')">
                                  <input type="hidden" name="id_comentario" value="<%= com.id_comentario %>">
                                  <button class="text-xs text-red-500 hover:underline mt-1">Eliminar</button>
                                </form>
                                <% } %>
                            </div>
                          </div>
                        </div>
                        <% }) %>




                          <!-- Comentar -->
                          <form action="/comentar" method="POST" class="space-y-2">
                            <input type="hidden" name="id_publicacion" value="<%= pub.id_publicacion %>">
                            <textarea name="contenido" rows="2" required
                              class="w-full p-2 border rounded-md resize-none text-sm text-gray-900"
                              placeholder="Escribe un comentario..."></textarea>
                            <button type="submit"
                              class="bg-red-600 hover:bg-red-500 text-white px-4 py-1 rounded text-sm shadow">
                              Comentar
                            </button>
                          </form>


                    </div>
          </article>
          <% }) %>


      </section>


      <!-- Sidebar -->
      <aside class="hidden md:flex flex-col space-y-4">
        <div class="bg-white text-gray-900 p-4 rounded-xl shadow border border-pink-200">
          <h4 class="text-sm font-semibold mb-2 text-red-600">Gente para chatear</h4>
          <p class="text-sm text-gray-600 italic">Todav√≠a no tienes amigos</p>
        </div>


        <div class="bg-white text-gray-900 p-4 rounded-xl shadow border border-pink-200">
          <h4 class="text-sm font-semibold mb-2 text-red-600">Calendario de eventos</h4>
          <p class="text-sm text-gray-600 italic">Pr√≥ximamente...</p>
        </div>
      </aside>
    </main>


    <%- include('partials/_footer') %>


      <script>
        function toggleComentarios(id) {
          const box = document.getElementById(`comentarios-${id}`);
          const arrow = document.getElementById(`flecha-${id}`);
          const isHidden = box.style.display === 'none' || !box.style.display;
          box.style.display = isHidden ? 'block' : 'none';
          arrow.textContent = isHidden ? '‚ñ≤' : '‚ñº';
        }
      </script>
</body>


</html>