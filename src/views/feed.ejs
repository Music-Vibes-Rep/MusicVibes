<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Feed - MusicVibe</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .main-wrapper {
      margin-top: 80px;
    }

    input[type="search"]::-webkit-search-cancel-button {
      -webkit-appearance: none;
    }
  </style>
</head>
<body class="text-white bg-gradient-to-r from-red-600 to-pink-700 min-h-screen">
  <%- include('partials/_navbar') %>

  <main class="main-wrapper container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-6">

    <!-- Centro (barra + publicaciones) -->
    <section class="md:col-span-2 space-y-6">

      <!-- Barra de búsqueda + botón -->
      <div class="bg-white text-gray-800 rounded-xl shadow px-4 py-3 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <div class="flex-1">
          <input type="search" placeholder="Busca..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-500 focus:border-red-500" />
        </div>
        <div class="flex-shrink-0">
          <a href="/publicacion" class="inline-block mt-2 sm:mt-0 bg-red-600 hover:bg-red-500 text-white text-sm font-semibold px-4 py-2 rounded-md shadow">
            Expresa tu vibra 
          </a>
        </div>
      </div>

      <!-- Publicaciones -->
      <% publicaciones.forEach(pub => { %>
        <article class="bg-white text-gray-900 rounded-xl shadow-md p-4 border-l-4 border-pink-400">
          <div class="flex items-center space-x-3 mb-3">
            <img src="<%= pub.foto_perfil || 'assets/img/default-profile.png' %>" alt="Avatar" class="w-12 h-12 rounded-full object-cover border border-pink-300">
            <div>
              <h3 class="text-red-700 font-semibold text-sm"><%= pub.nombre_usuario %></h3>
              <p class="text-xs text-gray-500"><%= new Date(pub.fecha_publicacion).toLocaleDateString() %></p>
            </div>
          </div>
      
          <% if (pub.foto) { %>
            <img src="<%= pub.foto %>" alt="Imagen de publicación" class="w-full rounded-md mb-3 object-contain max-h-[600px] border border-gray-200" />
          <% } %>
      
          <p class="text-gray-800 text-sm whitespace-pre-line"><%= pub.contenido %></p>
      
          <!-- Comentarios desplegables -->
          <button 
            type="button" 
            onclick="toggleComentarios(<%= pub.id_publicacion %>)" 
            class="mt-3 text-sm text-pink-700 font-semibold hover:underline"
          >
            Comentarios (<%= pub.comentarios.length %>) 
            <span id="flecha-<%= pub.id_publicacion %>">▼</span>
          </button>
      
          <div id="comentarios-<%= pub.id_publicacion %>" class="mt-2 space-y-2" style="display: none;">
            <% pub.comentarios.forEach(com => { %>
              <div class="bg-gray-100 text-gray-800 p-2 rounded-md shadow">
                <div class="flex justify-between items-center">
                  <p>
                    <strong><%= com.nombre_usuario %></strong>: <%= com.Comentario %>
                  </p>
                  <span class="text-xs text-gray-500 ml-2 whitespace-nowrap">
                    <%= new Date(com.fecha_comentario).toLocaleDateString('es-ES') %>
                  </span>
                </div>
              </div>
            <% }) %>
          </div>
          
      
          <!-- Formulario de comentar -->
          <form action="/comentar" method="POST" class="mt-4">
            <input type="hidden" name="id_publicacion" value="<%= pub.id_publicacion %>">
            <textarea name="contenido" rows="2" required class="w-full p-2 border rounded-md resize-none text-sm text-gray-900" placeholder="Escribe un comentario..."></textarea>
            <button type="submit" class="mt-1 bg-red-600 hover:bg-red-500 text-white px-3 py-1 rounded text-sm">Comentar</button>
          </form>
        </article>
      <% }) %>
      
    </section>

    <!-- Sidebar -->
    <aside class="hidden md:flex flex-col space-y-4">
      <div class="bg-white text-gray-900 p-4 rounded-xl shadow border border-pink-200">
        <h4 class="text-sm font-semibold mb-2 text-red-600">Gente para chatear</h4>
        <p class="text-sm text-gray-600 italic">Todavía no tienes amigos</p>
      </div>

      <div class="bg-white text-gray-900 p-4 rounded-xl shadow border border-pink-200">
        <h4 class="text-sm font-semibold mb-2 text-red-600">Calendario de eventos</h4>
        <p class="text-sm text-gray-600 italic">Próximamente...</p>
      </div>
    </aside>
  </main>

  <%- include('partials/_footer') %>

  <script>
    function toggleComentarios(id) {
      const box = document.getElementById(`comentarios-${id}`);
      const arrow = document.getElementById(`flecha-${id}`);
  
      const isHidden = box.style.display === 'none' || !box.style.display;
  
      box.style.display = isHidden ? 'block' : 'none';
      arrow.textContent = isHidden ? '▲' : '▼';
    }
  </script>
  
</body>
</html>
