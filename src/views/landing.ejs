<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MusicVibe</title>
  <link rel="icon" href="assets/img/IconNoBGW.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script>
    function toggleMenu() {
      document.getElementById('mobile-menu').classList.toggle('hidden');

    }

    // Función para alternar el menú desplegable
    function toggleDropdown() {
      const menu = document.getElementById('dropdown-menu');
      const arrow = document.getElementById('arrow-icon');
      menu.classList.toggle('hidden');
      arrow.classList.toggle('rotate-180');
    }
  
    // Cierra el menú si haces click fuera
    document.addEventListener('click', function(e) {
      const menu = document.getElementById('dropdown-menu');
      const button = e.target.closest('button[onclick="toggleDropdown()"]');
      if (!button && !e.target.closest('#dropdown-menu')) {
        menu.classList.add('hidden');
        document.getElementById('arrow-icon').classList.remove('rotate-180');
      }
    });
  </script>
</head>

<body class="text-gray-900 min-h-screen">
  <!-- Navbar -->
  <header class="bg-white opacity-75  backdrop-blur-md fixed top-0 inset-x-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
      <div class="flex items-center space-x-2 justify-between w-full">
        <a href="/" class="flex items-center">
          <img src="assets/img/IconNoBGB.png" alt="Logo" class="h-16 w-16">
        </a>
        <div class="hidden lg:flex space-x-6 text-sm font-medium text-gray-900">
          <a href="/" class="hover:text-red-600 transition">Inicio</a>
          <a href="#" class="hover:text-red-600 transition">Explorar</a>
          <a href="#" class="hover:text-red-600 transition">Eventos</a>
          <a href="/publicacion" class="hover:text-red-600 transition">Publicar</a>
        </div>
        <div class="hidden lg:flex items-center space-x-4 relative">
          <% if (usuario) { %>
            <div class="relative">
              <button onclick="toggleDropdown()" class="flex items-center space-x-2 focus:outline-none">
                <img src="<%= usuario.fotoPerfil || 'assets/img/default-profile.png' %>" alt="Perfil" class="w-10 h-10 rounded-full object-cover border-2 border-pink-400">
                <svg id="arrow-icon" class="w-4 h-4 text-gray-600 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
        
              <!-- Dropdown -->
              <div id="dropdown-menu" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-2 hidden z-50">
                <div class="px-4 py-2 text-sm text-gray-700">
                  <span class="font-semibold"><%= usuario.nombre %> <%= usuario.apellido %></span>
                </div>
                <a href="/perfil" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 text-sm">Perfil</a>
                <form action="/logout" method="POST" class="block">
                  <button type="submit" class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 text-sm">Cerrar sesión</button>
                </form>
              </div>
            </div>
          <% } else { %>
            <a href="/login" class="bg-red-600 hover:bg-pink-700 text-white font-semibold px-4 py-2 rounded-md transition">Accede</a>
          <% } %>
        </div>
              
      </div>
  
      
  
      <button class="lg:hidden p-2" onclick="toggleMenu()">
        <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  
    <div id="mobile-menu" class="lg:hidden hidden px-4 pt-2 pb-4 space-y-2 bg-white/95 backdrop-blur-md border-t border-white/30">
      <a href="#" class="block">Inicio</a>
      <a href="#" class="block">Explorar</a>
      <a href="#" class="block">Eventos</a>
      <% if (usuario) { %>
        <div class="pt-4 border-t border-gray-200">
          <img src="<%= usuario.fotoPerfil || '/assets/img/default-avatar.png' %>" alt="Perfil" class="w-10 h-10 rounded-full object-cover border-2 border-pink-400">

          <div class="px-4 py-2 text-sm text-gray-700">
            <span class="font-semibold"><%= usuario.nombre %> <%= usuario.apellido %></span>
          </div>
          <a href="/perfil" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 text-sm">Perfil</a>

          <form action="/logout" method="POST">
            <button type="submit" class="w-full text-left text-sm font-semibold text-red-600 hover:text-red-800 transition">Cerrar sesión</button>
          </form>
        </div>
      <% } else { %>
        <a href="/login" class="block bg-red-600 text-white px-3 py-1 rounded">Accede</a>
      <% } %>
    </div>
  </header>
  
  
  
  

  <!-- Contenido principal con fondo degradado -->
  <main class="pt-24 bg-gradient-to-r from-red-600 to-pink-700 text-white">
    <!-- Hero -->
    <section class="px-6 min-h-screen flex flex-col items-center justify-center text-center">
      <h1 class="text-5xl md:text-7xl font-extrabold mb-6">My Vibe My Music</h1>
      <p class="text-lg md:text-2xl mb-8">Un lugar donde la pasión por la música se encuentra</p>
      <a href="/registro" class="bg-white text-red-600 font-semibold px-6 py-3 rounded-md shadow hover:bg-gray-100 transition">Regístrate</a>
      <p class="select-text" style="color: transparent; user-select: text;">
          Moros a su pais
      </p>
      
    </section>

    <!-- ¿Qué es MusicVibe? -->
    <section class="py-16 text-center px-4 max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold mb-4 text-white">¿Qué es MusicVibe?</h2>
      <p class="text-white text-lg">Una comunidad donde puedes descubrir nuevos talentos, compartir tu música y asistir a eventos únicos creados por y para amantes del ritmo.</p>
    </section>

    

    <!-- Recomendaciones -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold text-center mb-10 text-white">Te recomendamos...</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% publicaciones.forEach(publi => { %>
            <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition transform hover:-translate-y-1 overflow-hidden">
              <% if (publi.foto) { %>
                <img src="<%= publi.foto %>" alt="Publicación" class="w-full h-60 object-cover">
              <% } else { %>
                <div class="bg-gray-300 w-full h-60 flex items-center justify-center text-gray-500">
                  Sin imagen
                </div>
              <% } %>
              <div class="p-4">
                <h3 class="text-center font-semibold text-pink-700 break-words"><%= publi.contenido %></h3>
              </div>
            </div>
          <% }); %>
        </div>
        <div class="text-center mt-6">
          <a href="#" class="inline-block bg-white text-red-600 px-4 py-2 rounded transition hover:bg-gray-100 font-semibold">Ver más</a>
        </div>
      </div>
    </section>
    

    <!-- Eventos destacados -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold text-center mb-10 text-white">Eventos destacados</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <% for(let i = 0; i < 8; i++) { %>
            <div class="bg-white text-red-600 h-40 rounded-xl shadow-lg flex items-center justify-center font-semibold text-lg">
              Evento <%= i+1 %>
            </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Únete -->
    <section class="py-16 px-4 text-center">
      <h2 class="text-2xl font-bold mb-6 text-white">Únete a nosotros</h2>
      <a href="/login" class="inline-block bg-white text-red-600 px-6 py-3 rounded-md font-semibold shadow transition hover:bg-gray-100">¡Unirse!</a>
    </section>

    <!-- Footer -->
    <footer class="py-6 px-4">
      <div class="max-w-6xl mx-auto flex flex-col sm:flex-row justify-between items-center text-white">
        <div class="text-sm">© 2025 MusicVibe. Todos los derechos reservados.</div>
        <div class="flex space-x-4 mt-4 sm:mt-0">
          <a href="#" class="hover:underline">Instagram</a>
          <a href="#" class="hover:underline">Twitter</a>
          <a href="/privacity" class="hover:underline">Términos</a>
        </div>
      </div>
    </footer>
  </main>
</body>


</html>
